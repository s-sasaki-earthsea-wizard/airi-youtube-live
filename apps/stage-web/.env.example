# LLM Configuration (OpenRouter)
# Get API Key from: https://openrouter.ai/settings/keys
VITE_LLM_PROVIDER=openrouter-ai
VITE_LLM_API_KEY=your-openrouter-api-key-here
VITE_LLM_BASE_URL=https://openrouter.ai/api/v1/
VITE_LLM_MODEL=anthropic/claude-3.5-sonnet

# Auto-Response Configuration
# Enable automatic AI responses to incoming messages from external sources (YouTube, Discord, etc.)
# When enabled, stage-web will automatically generate LLM responses and TTS audio for incoming messages
VITE_AUTO_RESPONSE_ENABLED=true

# TTS Configuration (ElevenLabs)
# Get API Key from: https://elevenlabs.io/app/settings/api-keys
# Find Voice IDs at: https://elevenlabs.io/app/voice-library
VITE_TTS_PROVIDER=elevenlabs
VITE_TTS_API_KEY=your-elevenlabs-api-key-here
VITE_TTS_BASE_URL=https://unspeech.hyp3r.link/v1/
VITE_TTS_MODEL=eleven_v3
VITE_TTS_VOICE_ID=your-voice-id-here

# Character Configuration
# Customize the character name and system prompt
VITE_CHARACTER_NAME=AIRI
# Path to system prompt file (relative to public folder)
# Example: /prompts/system-prompt.md
VITE_CHARACTER_SYSTEM_PROMPT_PATH=/prompts/system-prompt.md

# Knowledge Database (RAG Support)
# Enable to inject relevant character knowledge into system prompts
VITE_KNOWLEDGE_DB_ENABLED=false
VITE_KNOWLEDGE_DB_URL=http://localhost:3100
VITE_KNOWLEDGE_DB_LIMIT=3
VITE_KNOWLEDGE_DB_THRESHOLD=0.3

# Idle Talk Feature
# Automatically start conversation when no user input for specified time
# Requires VITE_KNOWLEDGE_DB_ENABLED=true
VITE_IDLE_TALK_ENABLED=false
# Idle timeout in milliseconds (default: 60000ms = 60 seconds)
VITE_IDLE_TIMEOUT=60000
# Topic selection mode: 'random' or 'sequential' (currently only 'random' is supported)
VITE_IDLE_TALK_MODE=random
# Minimum similarity threshold for random topic selection (0-1)
VITE_IDLE_TALK_MIN_SIMILARITY=0.0
# Context continuation: Continue talking about related topics
VITE_IDLE_TALK_CONTINUE_CONTEXT=false
# Maximum number of times to continue the same topic (default: 5)
VITE_IDLE_TALK_MAX_CONTINUATION=5

# YouTube Streaming Mode
# Enable streaming-optimized UI for YouTube Live broadcasting
VITE_STREAMING_MODE=false
# Show/hide header with logo and settings button
VITE_SHOW_HEADER=true
# Show/hide LLM responses in chat history (keep user messages visible)
VITE_SHOW_LLM_RESPONSES=true
# Show/hide text input area (during streaming, messages come from YouTube chat)
VITE_SHOW_TEXT_INPUT=true
