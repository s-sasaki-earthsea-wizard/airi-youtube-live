# Database Configuration
DATABASE_URL=postgresql://airi:airi_password@localhost:5434/airi_knowledge
POSTGRES_DB=airi_knowledge
POSTGRES_USER=airi
POSTGRES_PASSWORD=airi_password
POSTGRES_PORT=5434

# API Server Configuration
PORT=3100
HOST=0.0.0.0

# External Service API Keys (for data collection)
# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# note.com (if API available)
NOTE_API_KEY=your-note-api-key

# Embedding Service (for vector search)
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_API_KEY=your-openai-api-key

# Logging
LOG_LEVEL=info

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here
# DISCORD_HISTORICAL_LIMIT - Optional: limit number of historical messages to fetch
# Default: unlimited (fetch all available messages using pagination)
# Example: DISCORD_HISTORICAL_LIMIT=100  (fetch only last 100 messages)
# DISCORD_HISTORICAL_LIMIT=100

# Embedding Service (for RAG vector search)
EMBEDDING_API_BASE_URL=https://api.openai.com/v1
EMBEDDING_API_KEY=your-openai-api-key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
