# YouTube API Configuration
# Get API Key from Google Cloud Console: https://console.cloud.google.com/
YOUTUBE_API_KEY=your-youtube-api-key

# YouTube Video ID (from scheduled/active live stream URL)
# Example: https://www.youtube.com/watch?v=dQw4w9WgXcQ -> dQw4w9WgXcQ
YOUTUBE_VIDEO_ID=your-video-id

# YouTube Live Chat Configuration
POLLING_INTERVAL_MS=5000
MAX_MESSAGES_PER_POLL=50

# LLM Provider Configuration
# Use the same provider configuration as other AIRI services
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=your-llm-api-key

# TTS Provider Configuration
TTS_PROVIDER=openai-audio-speech
TTS_MODEL=tts-1
TTS_VOICE=alloy
TTS_API_KEY=your-tts-api-key

# Output Configuration
# Temporary directory for generated audio files (cleaned up after playback)
AUDIO_OUTPUT_DIR=/tmp/airi-youtube-bot/audio

# Logging
LOG_LEVEL=info
