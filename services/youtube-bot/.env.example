# YouTube API Configuration
# Get API Key from Google Cloud Console: https://console.cloud.google.com/
YOUTUBE_API_KEY=your-youtube-api-key

# YouTube Video ID (from scheduled/active live stream URL)
# Example: https://www.youtube.com/watch?v=dQw4w9WgXcQ -> dQw4w9WgXcQ
YOUTUBE_VIDEO_ID=your-video-id

# YouTube Live Chat Configuration
POLLING_INTERVAL_MS=10000
MAX_MESSAGES_PER_POLL=50

# AIRI Server Configuration
# The youtube-bot forwards messages to AIRI Server, where stage-web handles LLM/TTS processing
AIRI_SERVER_URL=ws://localhost:6121/ws
AIRI_SERVER_TOKEN=

# Logging
LOG_LEVEL=info
