# YouTube API Configuration
# Get API Key from Google Cloud Console: https://console.cloud.google.com/
YOUTUBE_API_KEY=your-youtube-api-key

# YouTube Video ID (from scheduled/active live stream URL)
# Example: https://www.youtube.com/watch?v=dQw4w9WgXcQ -> dQw4w9WgXcQ
YOUTUBE_VIDEO_ID=your-video-id

# YouTube Live Chat Configuration
POLLING_INTERVAL_MS=5000
MAX_MESSAGES_PER_POLL=50

# LLM Configuration (for chat responses)
LLM_API_BASE_URL=https://api.openai.com/v1/
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4o-mini

# TTS Configuration (for audio generation)
TTS_API_BASE_URL=https://api.openai.com/v1/
TTS_API_KEY=your-openai-api-key
TTS_MODEL=tts-1
TTS_VOICE=alloy

# Audio Output Configuration
AUDIO_OUTPUT_DIR=./audio-output

# Logging
LOG_LEVEL=info
